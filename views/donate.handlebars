    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Amount button selection
        const amountButtons = document.querySelectorAll('.amount-btn');
        const customInput = document.querySelector('.custom-amount-input');
        const customInputField = customInput.querySelector('input');
        const donateButton = document.querySelector('.donate-now-btn');
        
        let selectedAmount = 100; // Default featured amount
        
        amountButtons.forEach(button => {
            button.addEventListener('click', function() {
                // Remove active class from all buttons
                amountButtons.forEach(btn => btn.classList.remove('active'));
                
                if (this.classList.contains('custom')) {
                    this.classList.add('active');
                    customInput.style.display = 'block';
                    customInputField.focus();
                    selectedAmount = 0;
                } else {
                    this.classList.add('active');
                    customInput.style.display = 'none';
                    selectedAmount = parseInt(this.dataset.amount);
                }
                
                updateDonateButton();
            });
        });
        
        // Custom amount input
        customInputField.addEventListener('input', function() {
            selectedAmount = parseInt(this.value) || 0;
            updateDonateButton();
        });
        
        function updateDonateButton() {
            const btnText = donateButton.querySelector('span');
            if (selectedAmount > 0) {
                btnText.textContent = `Donate $${selectedAmount}`;
                donateButton.disabled = false;
            } else {
                btnText.textContent = 'Enter Amount';
                donateButton.disabled = true;
            }
        }
        
        // Donate button click
        donateButton.addEventListener('click', function() {
            if (selectedAmount > 0) {
                this.classList.add('loading');
                this.querySelector('span').textContent = 'Processing';
                
                // Simulate donation process (remove in production)
                setTimeout(() => {
                    this.classList.remove('loading');
                    this.querySelector('span').textContent = `Donate $${selectedAmount}`;
                    alert(`Thank you for your $${selectedAmount} donation to the Community Housing Initiative!`);
                }, 2000);
            }
        });
        
        // Share functionality
        const shareButtons = document.querySelectorAll('.share-btn');
        shareButtons.forEach(button => {
            button.addEventListener('click', function() {
                const projectTitle = document.querySelector('.project-hero-title').textContent;
                const projectUrl = window.location.href;
                
